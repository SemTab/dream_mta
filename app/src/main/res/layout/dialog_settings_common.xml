<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:clipToPadding="false"
    android:paddingStart="@dimen/_12sdp"
    android:paddingTop="@dimen/_8sdp"
    android:paddingEnd="@dimen/_12sdp"
    android:paddingBottom="@dimen/_8sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardBackgroundColor="#2A2E33"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:fontFamily="@font/akrobat_bold"
                    android:text="Основные настройки"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_14sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch_cutout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:fontFamily="@font/akrobat_bold"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:text="Безграничный экран"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_12sdp"
                            app:switchPadding="@dimen/_5sdp"
                            app:thumbTint="#FFFFFF"
                            app:trackTint="#80FFFFFF" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch_outfit_weapons"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:fontFamily="@font/akrobat_bold"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:text="Оружие за спиной"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_12sdp"
                            app:switchPadding="@dimen/_5sdp"
                            app:thumbTint="#FFFFFF"
                            app:trackTint="#80FFFFFF" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch_radar_rect"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:fontFamily="@font/akrobat_bold"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:text="Квадратный радар"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_12sdp"
                            app:switchPadding="@dimen/_5sdp"
                            app:thumbTint="#FFFFFF"
                            app:trackTint="#80FFFFFF" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch_time"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:fontFamily="@font/akrobat_bold"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:text="Время в худе"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="gone"
                            app:switchPadding="@dimen/_5sdp"
                            app:thumbTint="#FFFFFF"
                            app:trackTint="#80FFFFFF" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch_dialogs"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:fontFamily="@font/akrobat_bold"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:text="Новые диалоги"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_12sdp"
                            app:switchPadding="@dimen/_5sdp"
                            app:thumbTint="#FFFFFF"
                            app:trackTint="#80FFFFFF" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch_skybox"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:fontFamily="@font/akrobat_bold"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:text="Зимняя физика"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="gone"
                            app:switchPadding="@dimen/_5sdp"
                            app:thumbTint="#FFFFFF"
                            app:trackTint="#80FFFFFF" />
                </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardBackgroundColor="#2A2E33"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:fontFamily="@font/akrobat_bold"
                    android:text="Дополнительные настройки"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_14sdp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_fps_counter"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:fontFamily="@font/akrobat_bold"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:text="Счётчик FPS"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp"
                    app:switchPadding="@dimen/_5sdp"
                    app:thumbTint="#FFFFFF"
                    app:trackTint="#80FFFFFF" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_hud_logo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:fontFamily="@font/akrobat_bold"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:text="Онлайн и логотип в худе"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="gone"
                    app:switchPadding="@dimen/_5sdp"
                    app:thumbTint="#FFFFFF"
                    app:trackTint="#80FFFFFF" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_android_keyboard"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:fontFamily="@font/akrobat_bold"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:text="Android клавиатура"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="invisible"
                    app:switchPadding="@dimen/_5sdp"
                    app:thumbTint="#FFFFFF"
                    app:trackTint="#80FFFFFF" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardBackgroundColor="#2A2E33"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:fontFamily="@font/akrobat_bold"
                    android:text="Информация"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/hud_w_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/akrobat_bold"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="Настрой все, что нужно."
                    android:textColor="#80FFFFFF"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardBackgroundColor="#2A2E33"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:fontFamily="@font/akrobat_bold"
                    android:text="Смещение камеры пешком"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_14sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp">

                    <TextView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/akrobat_bold"
                        android:text="X"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_14sdp" />

                    <SeekBar
                        android:id="@+id/hud_element_pos_x_10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="400"
                        android:progress="1"
                        android:progressTint="#1A73E8"
                        android:thumbTint="#1A73E8" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp">

                    <TextView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/akrobat_bold"
                        android:text="Y"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_14sdp" />

                    <SeekBar
                        android:id="@+id/hud_element_pos_y_10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="400"
                        android:progress="1"
                        android:progressTint="#1A73E8"
                        android:thumbTint="#1A73E8" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp">

                    <TextView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/akrobat_bold"
                        android:text="Z"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_14sdp" />

                    <SeekBar
                        android:id="@+id/hud_element_scale_y_10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="400"
                        android:progress="1"
                        android:progressTint="#1A73E8"
                        android:thumbTint="#1A73E8" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardBackgroundColor="#2A2E33"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:fontFamily="@font/akrobat_bold"
                    android:text="Смещение камеры в транспорте"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_14sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp">

                    <TextView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/akrobat_bold"
                        android:text="X"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_14sdp" />

                    <SeekBar
                        android:id="@+id/hud_element_pos_x_11"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="400"
                        android:progress="1"
                        android:progressTint="#1A73E8"
                        android:thumbTint="#1A73E8" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp">

                    <TextView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/akrobat_bold"
                        android:text="Y"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_14sdp" />

                    <SeekBar
                        android:id="@+id/hud_element_pos_y_11"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="400"
                        android:progress="1"
                        android:progressTint="#1A73E8"
                        android:thumbTint="#1A73E8" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp">

                    <TextView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/akrobat_bold"
                        android:text="Z"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_14sdp" />

                    <SeekBar
                        android:id="@+id/hud_element_scale_y_11"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="400"
                        android:progress="1"
                        android:progressTint="#1A73E8"
                        android:thumbTint="#1A73E8" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
