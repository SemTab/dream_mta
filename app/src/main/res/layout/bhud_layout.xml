<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bhud_main" android:layout_width="match_parent" android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/brp_hud_weapon_container"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginEnd="@dimen/_130sdp"
        android:elevation="5dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/brp_hud_main"
        app:layout_constraintTop_toTopOf="@+id/brp_hud_main">

        <LinearLayout
            android:id="@+id/hud_ammo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="@dimen/_35sdp"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_4sdp"
            android:paddingVertical="@dimen/_2sdp">

            <ImageView
                android:id="@+id/hud_bullet"
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_8sdp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_bullet" />

            <TextView
                android:id="@+id/hud_ammo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_2sdp"
                android:fontFamily="@font/sfprodisplaybold"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_7sdp" />

            <TextView
                android:id="@+id/hud_max_ammo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/sfprodisplaybold"
                android:text="/0"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_7sdp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/hud_fist_icon"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginStart="@dimen/_17sdp"
            android:layout_marginBottom="@dimen/_25sdp"
            android:src="@drawable/weapon_0" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/brp_hud_logo"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_26sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:background="@drawable/card_background"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/brp_hud_online"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:src="@drawable/logo_no_map" />

    </LinearLayout>

    <ImageView
        android:id="@+id/brp_hud_x2"
        android:layout_width="@dimen/_19sdp"
        android:layout_height="@dimen/_13sdp"
        android:src="@drawable/ic_hud_x2"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/brp_hud_main"
        app:layout_constraintEnd_toEndOf="@+id/brp_hud_logo"
        app:layout_constraintHorizontal_bias="0.964"
        app:layout_constraintStart_toStartOf="@+id/brp_hud_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/brp_hud_online"
        android:layout_width="@dimen/_42sdp"
        android:layout_height="@dimen/_26sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="#0DFFFFFF"
        android:paddingHorizontal="@dimen/_5sdp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/brp_hud_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:src="@drawable/ic_user"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView11"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/hud_online_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfprodisplaybold"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/hud_online_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfprodisplaybold"
                android:text="/50"
                android:textColor="#80FFFFFF"
                android:textSize="@dimen/_8sdp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/brp_hud_main"
        android:layout_width="@dimen/_210sdp"
        android:layout_height="@dimen/_72sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_13sdp"
        android:elevation="1dp"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brp_hud_online">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="@dimen/_145sdp"
            android:layout_height="@dimen/_14sdp"
            android:layout_marginStart="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="@dimen/_9sdp"
                android:layout_height="@dimen/_9sdp"
                android:src="@drawable/ic_heart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/hud_health_pb"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="@dimen/_118sdp"
                android:layout_height="@dimen/_3sdp"
                android:indeterminate="false"
                android:progress="0"
                android:progressDrawable="@drawable/hud_progress_bar"
                android:progressTint="#FF4141"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/hud_health_text"
                app:layout_constraintStart_toEndOf="@+id/imageView13"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/hud_health_text"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_12sdp"
                android:fontFamily="@font/sfprodisplaybold"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_8sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout4"
            android:layout_width="@dimen/_145sdp"
            android:layout_height="@dimen/_14sdp"
            android:layout_marginStart="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="@dimen/_9sdp"
                android:layout_height="@dimen/_9sdp"
                android:src="@drawable/ic_armor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/hud_armour_pb"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="@dimen/_118sdp"
                android:layout_height="@dimen/_3sdp"
                android:indeterminate="false"
                android:progress="0"
                android:progressDrawable="@drawable/hud_progress_bar"
                android:progressTint="#5096FF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/hud_armour_text"
                app:layout_constraintStart_toEndOf="@+id/imageView14"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/hud_armour_text"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_12sdp"
                android:fontFamily="@font/sfprodisplaybold"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_8sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout6"
            android:layout_width="@dimen/_145sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_marginStart="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/ic_wallet"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfprodisplaybold"
                    android:text="$"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_16sdp" />

                <TextView
                    android:id="@+id/hud_balance_text"
                    android:layout_width="@dimen/_228sdp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/sfprodisplaybold"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/_16sdp"
                    android:letterSpacing="0" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/hud_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:orientation="horizontal" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/brp_hud_date"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_19sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:background="#1AFFFFFF"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/brp_hud_time"
        app:layout_constraintTop_toBottomOf="@+id/brp_hud_main">

        <TextView
            android:id="@+id/hud_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprodisplaybold"
            android:text="01.01.2021"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_9sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/brp_hud_time"
        android:layout_width="@dimen/_54sdp"
        android:layout_height="@dimen/_19sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_13sdp"
        android:background="#1AFFFFFF"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brp_hud_main">

        <TextView
            android:id="@+id/hud_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprodisplaybold"
            android:text="00:00:00"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_9sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/brp_hud_level"
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:background="#1AFFFFFF"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/brp_hud_date"
        app:layout_constraintTop_toBottomOf="@+id/brp_hud_main">

        <TextView
            android:id="@+id/hud_level_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprodisplaybold"
            android:text="Lvl 1"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_27sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/brp_hud_logo"
        app:layout_constraintEnd_toEndOf="@+id/brp_hud_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041"
        app:srcCompat="@drawable/ic_hud_x2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="47dp"
        android:layout_height="53dp"
        android:layout_marginStart="@dimen/_96sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:srcCompat="@drawable/widgetgetin" />

</androidx.constraintlayout.widget.ConstraintLayout>