<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_220sdp"
    android:layout_height="@dimen/_80sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/card"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/server_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/brp_launcher_server_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/sfprodisplaybold"
            android:letterSpacing="0.02"
            android:text="Horizon"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/server_indicators"
            app:layout_constraintEnd_toStartOf="@+id/brp_launcher_server_online"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <LinearLayout
            android:id="@+id/server_indicators"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/brp_launcher_server_title"
            app:layout_constraintTop_toBottomOf="@id/brp_launcher_server_title">

            <TextView
                android:id="@+id/brp_launcher_server_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_secondary"
                android:fontFamily="@font/sfprodisplaymedium"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="ONE SERV"
                android:textColor="@color/gray_200"
                android:textSize="10sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/brp_launcher_server_maintenance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_secondary"
                android:fontFamily="@font/sfprodisplaymedium"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="Тех. работы"
                android:textColor="@color/gray_200"
                android:textSize="10sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/brp_launcher_server_shipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_secondary"
                android:fontFamily="@font/sfprodisplaymedium"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="Акция"
                android:textColor="@color/gray_200"
                android:textSize="10sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/brp_launcher_server_double"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_secondary"
                android:fontFamily="@font/sfprodisplaymedium"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="X2"
                android:textColor="@color/gray_200"
                android:textSize="10sp"
                android:visibility="invisible" />
        </LinearLayout>

        <TextView
            android:id="@+id/brp_launcher_server_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_15sdp"
            android:fontFamily="@font/sfprodisplaybold"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprodisplaymedium"
            android:text="/50"
            android:textColor="@color/gray_400"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/brp_launcher_server_online"
            app:layout_constraintTop_toBottomOf="@+id/brp_launcher_server_online" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>