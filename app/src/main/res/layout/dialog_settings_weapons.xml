<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#00212529"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1A1D21"
        android:elevation="4dp"
        app:title="Настройки оружия"
        app:titleTextColor="#FFFFFF" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="start"
            android:orientation="vertical"
            android:padding="@dimen/_16sdp">

            <!-- Смещение для всех оружий -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16sdp"
                app:cardBackgroundColor="#2A2E33"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:fontFamily="@font/akrobat_bold"
                        android:text="Дополнительное смещение"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_16sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:background="#44484E" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:fontFamily="@font/akrobat_bold"
                        android:text="Положение по горизонтали (X)"
                        android:textColor="#AAAAAA"
                        android:textSize="@dimen/_12sdp" />

                    <SeekBar
                        android:id="@+id/hud_element_pos_x_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:max="400"
                        android:progress="1"
                        android:progressTint="#1A73E8"
                        android:thumbTint="#1A73E8" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:fontFamily="@font/akrobat_bold"
                        android:text="Положение по вертикали (Y)"
                        android:textColor="#AAAAAA"
                        android:textSize="@dimen/_12sdp" />

                    <SeekBar
                        android:id="@+id/hud_element_pos_y_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:max="400"
                        android:progress="1"
                        android:progressTint="#1A73E8"
                        android:thumbTint="#1A73E8" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:fontFamily="@font/akrobat_bold"
                        android:text="Масштаб (Z)"
                        android:textColor="#AAAAAA"
                        android:textSize="@dimen/_12sdp" />

                    <SeekBar
                        android:id="@+id/hud_element_scale_y_12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="400"
                        android:progress="1"
                        android:progressTint="#1A73E8"
                        android:thumbTint="#1A73E8" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Поворот для всех оружий -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16sdp"
                app:cardBackgroundColor="#2A2E33"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:fontFamily="@font/akrobat_bold"
                        android:text="Дополнительный поворот"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_16sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:background="#44484E" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:fontFamily="@font/akrobat_bold"
                        android:text="Поворот по оси X"
                        android:textColor="#AAAAAA"
                        android:textSize="@dimen/_12sdp" />

                    <SeekBar
                        android:id="@+id/hud_element_pos_x_13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:max="400"
                        android:progress="1"
                        android:progressTint="#1A73E8"
                        android:thumbTint="#1A73E8" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:fontFamily="@font/akrobat_bold"
                        android:text="Поворот по оси Y"
                        android:textColor="#AAAAAA"
                        android:textSize="@dimen/_12sdp" />

                    <SeekBar
                        android:id="@+id/hud_element_pos_y_13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:max="400"
                        android:progress="1"
                        android:progressTint="#1A73E8"
                        android:thumbTint="#1A73E8" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        android:fontFamily="@font/akrobat_bold"
                        android:text="Поворот по оси Z"
                        android:textColor="#AAAAAA"
                        android:textSize="@dimen/_12sdp" />

                    <SeekBar
                        android:id="@+id/hud_element_scale_y_13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="400"
                        android:progress="1"
                        android:progressTint="#1A73E8"
                        android:thumbTint="#1A73E8" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>
