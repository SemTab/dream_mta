<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    android:id="@+id/root" 
    android:background="@color/background"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:fontFamily="@font/sfprodisplaymedium"
        android:text="Не закрывайте приложение до завершения загрузки"
        android:textAlignment="center"
        android:textColor="@color/gray_300"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Логотип по центру сверху -->
    <ImageView
        android:id="@id/imageView7"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:src="@drawable/logo_no_map"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/brp_launcher_load_progress_titile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Информация о прогрессе по центру -->
    <TextView
        android:textSize="16sp"
        android:textColor="@color/white"
        android:id="@+id/brp_launcher_load_progress_titile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Подготовка к загрузке..."
        android:fontFamily="@font/sfprodisplaybold"
        app:layout_constraintStart_toStartOf="@id/progressContainer"
        app:layout_constraintTop_toBottomOf="@id/imageView7"
        app:layout_constraintBottom_toTopOf="@id/progressContainer" />
        
    <TextView 
        android:textSize="16sp" 
        android:textColor="@color/white"
        android:id="@+id/brp_launcher_load_progress_text" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:text="0%" 
        android:fontFamily="@font/sfprodisplaybold" 
        app:layout_constraintEnd_toEndOf="@id/progressContainer" 
        app:layout_constraintTop_toTopOf="@id/brp_launcher_load_progress_titile"
        app:layout_constraintBottom_toBottomOf="@id/brp_launcher_load_progress_titile" />

    <LinearLayout
        android:id="@+id/progressContainer"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/brp_launcher_load_progress_titile"
        app:layout_constraintBottom_toTopOf="@id/brp_launcher_load_progress_text_2">
        
        <ProgressBar
            android:id="@+id/brp_launcher_load_progress_bar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progress_gradient" />
            
        <ProgressBar
            android:id="@+id/brp_launcher_load_progress_bar_inter"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progress_gradient"
            android:max="100"
            android:visibility="invisible"
            android:progress="0"
            android:progressDrawable="@drawable/progress_gradient" />
    </LinearLayout>

    <TextView
        android:id="@+id/brp_launcher_load_progress_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/sfprodisplaymedium"
        android:text="0.0 MB из 0.0 MB"
        android:textColor="@color/gray_300"
        android:textSize="14sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@id/progressContainer"
        app:layout_constraintStart_toStartOf="@id/progressContainer"
        app:layout_constraintTop_toBottomOf="@id/progressContainer"
        app:layout_constraintBottom_toTopOf="@id/brp_launcher_load_unzip_text" />

    <TextView 
        android:textSize="16sp" 
        android:textColor="@color/white" 
        android:id="@+id/brp_launcher_load_unzip_text" 
        android:visibility="gone" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginTop="@dimen/_10sdp" 
        android:text="Идет распаковка архива..." 
        android:fontFamily="@font/sfprodisplaybold" 
        app:layout_constraintEnd_toEndOf="parent" 
        app:layout_constraintStart_toStartOf="parent" 
        app:layout_constraintTop_toBottomOf="@id/brp_launcher_load_progress_text_2"
        app:layout_constraintBottom_toTopOf="@id/textView" />
</androidx.constraintlayout.widget.ConstraintLayout> 