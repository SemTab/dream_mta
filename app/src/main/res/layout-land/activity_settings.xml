<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    android:background="@color/background" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <View
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/surface"
        app:layout_constraintTop_toTopOf="parent"/>
        
    <Button 
        android:id="@+id/brp_launcher_settings_back" 
        android:background="@drawable/button_secondary" 
        android:layout_width="@dimen/_40sdp" 
        android:layout_height="@dimen/_40sdp" 
        android:layout_marginTop="@dimen/_5sdp" 
        android:layout_marginStart="@dimen/_16sdp"
        android:drawableStart="@drawable/ic_arrow_back" 
        android:paddingStart="@dimen/_12sdp"
        app:layout_constraintStart_toStartOf="parent" 
        app:layout_constraintTop_toTopOf="parent" />
        
    <TextView 
        android:textSize="18sp" 
        android:textColor="@color/white" 
        android:id="@+id/textView10" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginTop="@dimen/_5sdp" 
        android:text="Настройки" 
        android:fontFamily="@font/sfprodisplaybold"
        android:letterSpacing="0.02"
        app:layout_constraintEnd_toEndOf="parent" 
        app:layout_constraintStart_toStartOf="parent" 
        app:layout_constraintTop_toTopOf="parent" />
        
    <TextView 
        android:textSize="14sp" 
        android:textColor="@color/gray_400" 
        android:id="@+id/textView11" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginTop="2dp" 
        android:text="Приведите в порядок вашу игру" 
        android:fontFamily="@font/sfprodisplaymedium" 
        app:layout_constraintEnd_toEndOf="parent" 
        app:layout_constraintStart_toStartOf="parent" 
        app:layout_constraintTop_toBottomOf="@id/textView10" />
        
    <ScrollView 
        android:id="@+id/lllt" 
        android:scrollbars="vertical" 
        android:layout_width="match_parent" 
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp" 
        android:fadeScrollbars="false"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent" 
        app:layout_constraintEnd_toEndOf="parent" 
        app:layout_constraintStart_toStartOf="parent" 
        app:layout_constraintTop_toBottomOf="@id/topBar">
        
        <LinearLayout 
            android:layout_gravity="center" 
            android:orientation="horizontal" 
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content">
            
            <!-- Левая колонка настроек -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:background="@color/card"
                    android:orientation="vertical"
                    android:elevation="0dp"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="8dp">
                    
                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfprodisplaybold"
                        android:text="@string/nick_name"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/brp_launcher_settings_nick"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/primary_light"
                        android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM_"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/sfprodisplaymedium"
                        android:hint="Имя_Фамилия"
                        android:inputType="text"
                        android:paddingStart="12dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray_500"
                        android:textSize="14sp"
                        app:drawableLeftCompat="@drawable/ic_user" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:background="@color/card"
                    android:orientation="vertical"
                    android:elevation="0dp"
                    android:padding="16dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/switch2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfprodisplaybold"
                        android:text="Проверка файлов перед запуском"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:id="@+id/radioGroupFileCheck"
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/brp_launcher_file_check_on"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@drawable/modern_radio_left_selector"
                            android:button="@color/transparent"
                            android:checked="true"
                            android:fontFamily="@font/sfprodisplaymedium"
                            android:gravity="center"
                            android:text="Выкл"
                            android:textColor="@color/background"
                            android:textSize="14sp" />

                        <RadioButton
                            android:id="@+id/brp_launcher_file_check_off"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@drawable/modern_radio_right_selector"
                            android:button="@color/transparent"
                            android:fontFamily="@font/sfprodisplaymedium"
                            android:gravity="center"
                            android:text="Вкл"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </RadioGroup>
                </LinearLayout>

            </LinearLayout>
            
            <!-- Правая колонка настроек -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:background="@color/card"
                    android:orientation="vertical"
                    android:elevation="0dp"
                    android:padding="16dp">

                    <Button
                        android:id="@+id/brp_launcher_reinstall"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/button_secondary"
                        android:fontFamily="@font/sfprodisplaymedium"
                        android:text="Переустановить игру"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:background="@color/card"
                    android:orientation="vertical"
                    android:elevation="0dp"
                    android:padding="16dp">
                    
                    <TextView 
                        android:textSize="16sp" 
                        android:textColor="@color/white" 
                        android:gravity="center_horizontal" 
                        android:layout_width="fill_parent" 
                        android:layout_height="wrap_content" 
                        android:text="Следите за новостями" 
                        android:fontFamily="@font/sfprodisplaybold"
                        android:letterSpacing="0.02" />
                        
                    <LinearLayout 
                        android:layout_gravity="center" 
                        android:orientation="horizontal" 
                        android:id="@+id/brp_launcher_settings_links" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">
                        
                        <ImageView 
                            android:id="@+id/imageViewTelegram"
                            android:layout_width="48dp" 
                            android:layout_height="48dp" 
                            android:src="@drawable/ic_telegram"
                            android:padding="8dp"
                            android:layout_marginStart="@dimen/_10sdp" />
                            
                        <ImageView 
                            android:id="@+id/imageViewVK" 
                            android:layout_width="48dp" 
                            android:layout_height="48dp" 
                            android:src="@drawable/ic_vk"
                            android:padding="8dp"
                            android:layout_marginStart="@dimen/_10sdp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout> 